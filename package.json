{
  "name": "@luxfhe/sdk",
  "version": "0.5.1",
  "description": "LuxFHE SDK - Network-based Threshold TFHE with decentralized decryption",
  "main": "./dist/web.js",
  "module": "./dist/web.mjs",
  "types": "./dist/web.d.ts",
  "browser": "./dist/web.mjs",
  "exports": {
    ".": {
      "webpack": "./dist/web.mjs",
      "browser": "./dist/web.mjs",
      "import": "./dist/web.mjs",
      "require": "./dist/web.js",
      "default": "./dist/web.mjs"
    },
    "./web": {
      "webpack": "./dist/web.mjs",
      "browser": "./dist/web.mjs",
      "import": "./dist/web.mjs",
      "require": "./dist/web.js",
      "default": "./dist/web.mjs"
    },
    "./node": {
      "node": "./dist/node.mjs",
      "import": "./dist/node.mjs",
      "require": "./dist/node.js",
      "default": "./dist/node.mjs"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "src",
    "licenses",
    "package.json",
    "package-lock.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run prebuild && npm run build:web && npm run build:node",
    "build:web": "tsup --config tsup.config.ts --entry.web=./src/web/index.ts --platform=browser",
    "build:node": "tsup --config tsup.config.ts --entry.node=./src/node/index.ts --platform=node",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src/",
    "_pure-compile": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && tsc -p tsconfig.types.json",
    "compile": "pnpm _hack-backup-cjs && pnpm _pure-compile && pnpm _hack-restore-cjs",
    "build-rollup": "rollup -c",
    "dev-rollup": "rollup -c -w",
    "test": "VITE_CJS_IGNORE_WARNING=true vitest",
    "coverage": "pnpm compile && VITE_CJS_IGNORE_WARNING=true vitest run --coverage",
    "test-no-localluxfhe": "SKIP_LOCAL_ENV=true VITE_CJS_IGNORE_WARNING=true vitest ",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier-ci": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "test-docker-compose-down": "CONFIG_DIR=./docker/configs KEYS_PATH=./docker/keys docker compose -f test/docker-compose.yml down -v",
    "test-docker-compose-up": "CONFIG_DIR=./docker/configs KEYS_PATH=./docker/keys docker compose -f test/docker-compose.yml up -d",
    "test-docker-compose-pull": "docker compose -f test/docker-compose.yml pull"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxfi/luxfhe.git"
  },
  "author": "Lux Industries Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luxfi/luxfhe/issues"
  },
  "homepage": "https://github.com/luxfi/luxfhe#readme",
  "dependencies": {
    "@luxfhe/wasm": "^0.1.2",
    "@types/node": "^22.0.0",
    "idb-keyval": "^6.2.1",
    "immer": "^10.1.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "type-fest": "^4.35.0",
    "zod": "^3.25.56",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-wasm": "6.2.2",
    "@typescript-eslint/eslint-plugin": "8.33.1",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "9.39.2",
    "ethers": "^6.16.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "4.43.0",
    "shx": "^0.3.4",
    "ts-node": "10.9.2",
    "tsup": "^8.5.0",
    "typedoc": "0.28.6",
    "typedoc-plugin-extras": "4.0.1",
    "typescript": "5.9.3",
    "uglify-js": "3.19.3",
    "vite": "7.3.0",
    "vite-plugin-top-level-await": "1.5.0",
    "vite-plugin-wasm": "3.4.1",
    "vitest": "4.0.16"
  },
  "sideEffects": false,
  "tsup": {
    "entry": {
      "web": "./src/web/index.ts",
      "node": "./src/node/index.ts"
    },
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "outDir": "dist"
  }
}
